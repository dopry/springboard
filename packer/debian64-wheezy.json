{
  "variables": {
    "comment": "pull the BUILD_NUMBER environment variable set by Jenkins",
    "build_version": "0.0.{{env `BUILD_NUMBER` }}"
  },
  "builders": [
    {
      "name": "virtualbox",
      "boot_command": [
        "<esc><wait>",
        "install <wait>",
        "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/debian64-wheezy-preseed.cfg <wait>",
        "debian-installer=en_US <wait>",
        "auto <wait>",
        "locale=en_US <wait>",
        "kbd-chooser/method=us <wait>",
        "netcfg/get_hostname={{ .Name }} <wait>",
        "netcfg/get_domain=vagrantup.com <wait>",
        "fb=false <wait>",
        "debconf/frontend=noninteractive <wait>",
        "console-setup/ask_detect=false <wait>",
        "console-keymaps-at/keymap=us <wait>",
        "keyboard-configuration/xkb-keymap=us <wait>",
        "<enter><wait>"
      ],
      "boot_wait": "11s",
      "disk_size": 10140,
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "guest_os_type": "Debian_64",
      "http_directory": "http",
      "iso_checksum": "8fdb6715228ea90faba58cb84644d296",
      "iso_checksum_type": "md5",
      "iso_url": "http://cdimage.debian.org/debian-cd/current/amd64/iso-cd/debian-7.5.0-amd64-netinst.iso",
      "shutdown_command": "echo 'halt -p' > shutdown.sh; echo 'vagrant'|sudo -S bash 'shutdown.sh'",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_username": "vagrant",
      "ssh_wait_timeout": "10000s",
      "type": "virtualbox-iso",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "512"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "2"
        ]
      ],
      "virtualbox_version_file": ".vbox_version"
    },
    {
      "name": "vmware",
      "boot_command": [
        "<esc><wait>",
        "install <wait>",
        "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/debian64-wheezy-preseed.cfg <wait>",
        "debian-installer=en_US <wait>",
        "auto <wait>",
        "locale=en_US <wait>",
        "kbd-chooser/method=us <wait>",
        "netcfg/get_hostname={{ .Name }} <wait>",
        "netcfg/get_domain=vagrantup.com <wait>",
        "fb=false <wait>",
        "debconf/frontend=noninteractive <wait>",
        "console-setup/ask_detect=false <wait>",
        "console-keymaps-at/keymap=us <wait>",
        "keyboard-configuration/xkb-keymap=us <wait>",
        "<enter><wait>"
      ],
      "boot_wait": "15s",
      "disk_size": 10140,
      "guest_os_type": "debian5-64",
      "http_directory": "http",
      "iso_checksum": "8fdb6715228ea90faba58cb84644d296",
      "iso_checksum_type": "md5",
      "iso_url": "http://cdimage.debian.org/debian-cd/current/amd64/iso-cd/debian-7.5.0-amd64-netinst.iso",
      "shutdown_command": "echo 'halt -p' > shutdown.sh; echo 'vagrant'|sudo -S bash 'shutdown.sh'",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_username": "vagrant",
      "ssh_wait_timeout": "10000s",
      "type": "vmware-iso",
      "vmx_data": {
        "cpuid.coresPerSocket": "1",
        "memsize": "512",
        "numvcpus": "2"
      }
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "output": "springboard-wheezy-{{.BuildName}}-{{user `build_version`}}.box",
      "compression_level": 1
    }
  ],
  "provisioners": [
    {
      "override": {
        "virtualbox": {
          "execute_command": "echo 'vagrant'|sudo -S bash '{{.Path}}'"
        },
        "vmware": {
          "execute_command": "echo 'vagrant'|sudo -S bash '{{.Path}}'"
        }
      },
      "scripts": [
        "scripts/debian64-wheezy-base.sh",
        "scripts/debian64-wheezy-vagrant.sh",
        "scripts/debian64-wheezy-virtualbox.sh",
        "scripts/debian64-wheezy-postinstall.sh",
        "scripts/debian64-wheezy-selenium.sh",
        "scripts/debian64-wheezy-cleanup.sh",
        "scripts/debian64-wheezy-zerodisk.sh"
      ],
      "type": "shell"
    }
  ]
}
